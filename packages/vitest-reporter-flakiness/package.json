{
  "name": "vitest-reporter-flakiness",
  "version": "0.0.0-beta.1",
  "private": false,
  "description": "A Vitest reporter that identifies and reports flaky tests by tracking test retries and their outcomes.",
  "author": {
    "name": "Johannes Lindgren"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johannes-lindgren/vitest-reporter-flakiness"
  },
  "bugs": {
    "url": "https://github.com/johannes-lindgren/vitest-reporter-flakiness/issues"
  },
  "keywords": [
    "vitest",
    "unit testing",
    "flakiness",
    "ci"
  ],
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist",
    "logo.webp"
  ],
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build:es": "tsc",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build": "npm run build:es && npm run build:cjs",
    "preview": "node dist/index.js",
    "check:types": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.5.4",
    "vitest": "^4.0.18",
    "@vitest/runner": "^4.0.18"
  },
  "peerDependencies": {
    "vitest": ">=4.0.0 <5.0.0"
  }
}

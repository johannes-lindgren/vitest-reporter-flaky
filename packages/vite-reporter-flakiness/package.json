{
  "name": "vite-reporter-flakiness",
  "version": "0.0.0-beta.0",
  "private": false,
  "description": "A Vitest reporter that identifies and reports flaky tests by tracking test retries and their outcomes.",
  "author": {
    "name": "Johannes Lindgren"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johannes-lindgren/vite-reporter-flakiness"
  },
  "bugs": {
    "url": "https://github.com/johannes-lindgren/vite-reporter-flakiness/issues"
  },
  "keywords": [
    "vitest",
    "unit testing",
    "flakiness",
    "ci"
  ],
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist",
    "logo.webp"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "preview": "node dist/index.js",
    "test": "vitest",
    "check:types": "tsc --noEmit",
    "check:formatting": "prettier . --check",
    "format": "prettier . --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "3.1.0",
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
